{
  "manifest_version": 3,
  "name": "Doomify",
  "version": "1.0",
  "description": "Rewrite articles into short, addictive doomscroll-style sections with images and emojis",
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Side Panel",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
